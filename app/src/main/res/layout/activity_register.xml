<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/coder3"
    tools:context="com.example.admin.reportcard.Register">

   <!-- <Android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />-->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Students Registration"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Name"/>

        <EditText
            android:id="@+id/name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="e.g. John"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Surname"/>

        <EditText
            android:id="@+id/surname_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="e.g. Doe"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Email"/>

        <EditText
            android:id="@+id/email_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="e.g. jdoe@segageCorp.co.za"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Password"/>

        <EditText
            android:id="@+id/password_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="e.g. pAsword@123"
            android:inputType="textPassword"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Confirm Password"/>

        <EditText
            android:id="@+id/confirm_password_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="e.g. pAsword@123"
            android:inputType="textPassword"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Test 1"/>

        <EditText
            android:id="@+id/test1_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="e.g. 99"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Test 2"/>

        <EditText
            android:id="@+id/test2_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="e.g. 50"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Assignment"/>

        <EditText
            android:id="@+id/assignment_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="e.g. 100"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Final Mark"/>

        <EditText
            android:id="@+id/final_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="e.g. 78"/>

    </LinearLayout>

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Register"
        android:text="Register Student"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>
